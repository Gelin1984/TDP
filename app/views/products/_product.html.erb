<div class="col-sm-2 col-md-6">
	<center>
        <h1><%= link_to product.name, product %></h1>
        <p><%= product.description %></p>
        <p><%= product.price %>$</p>
        <<td><%= link_to (image_tag product.image_url, class: "img-responsive"), product %></td>
        <% if current_user && current_user.admin? %>
        <td><%= link_to 'Show', product, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', product,class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?'} %></td>
         <% else %>
         <td><%= link_to 'Show', product, class: "btn btn-primary" %></td>
    <% end %>    
  </center>
</div><!-- /col -->
