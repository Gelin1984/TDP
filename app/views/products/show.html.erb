<div class="row">
<div class="col-md-4"></div>
<div class="col-sm-6">
</div>
</div>
  <br/>
  <br/>
    <p>
      <span class="glyphicon glyphicon-globe"><strong>Product</strong></span>
      <br/>
      <%= @product.name %>
    </p>
    <p>
      <span class="glyphicon glyphicon-hand-right"><strong> Description</strong></span>
      <br/>
      <%= @product.description %>
    </p>
    <p>
      <span class="glyphicon glyphicon-usd"><strong>Price </strong>
        <br/>
        <%= @product.price %> </span>
      </p>
    <p>
    <%= form_with(url: '/payments/create') do |form| %>
          <%= render partial: "shared/stripe_checkout_button" %>
          <%= hidden_field_tag(:product_id, @product.id) %>
        <% end %>
      </p>
    <p>Average Rating: 
    <div class="rated" data-score="<%= @product.average_rating %>"></div>
    </p>
    <br/>
    <br/>
    <p>
    <%= image_tag @product.image_url, class: "img-responsive" %>
    </p>
    <br/>
      <%= link_to 'Edit', edit_product_path(@product),class: "btn btn-primary" %> 
      <%= link_to 'Back', products_path, class: "btn btn-primary" %>
      <div class="col-md-6 col-lg-6 col-xs-12 product_div">
        <h4 class="product_title"> <span class="glyphicon glyphicon-pencil"></span> Comments </h4>
        <div id="comments">
          
          <% end %>
          <div class="alert alert-info" style="display: none" role="alert">
            A new comment was posted!
          </div>
          <%= render 'new_comment' %>
          <%= render 'comments' %>
          <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>     
        </div>