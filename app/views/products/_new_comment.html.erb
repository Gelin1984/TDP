<% if signed_in? %>
<div class="table", style="text-align:center"?
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <div class="rating"></div>
      <%= f.label :rating %><br>
    </p>  
    <p>
      <%= f.submit "Submit" %>
    </p>
  </div>
  <% end %>
<% end %>