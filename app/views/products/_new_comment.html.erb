<% if signed_in? %>
<div class="table", style="text-align:center">
  <h4></h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.text_area :body, placeholder: "Add a comment!", :required => true %>
    </p>
    <p>
      <div class="rating"></div>
      <%= f.label :rating %><br>
    </p>  
    <p>
      <%= f.submit "Submit" %>
    </p>
  </div>
  <% end %>
  <% end %>